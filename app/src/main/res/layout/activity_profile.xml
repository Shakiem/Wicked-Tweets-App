<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shakiemsaunders.wickedTweetsApp.activities.ProfileActivity">

    <RelativeLayout
        android:id="@+id/profileHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/profileBackgroundImage"
            android:layout_height="90dp"
            android:layout_width="match_parent"
            app:srcCompat="@color/orange"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/userProfileImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@android:color/holo_green_light"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userProfileImage"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="Firstname Lastname"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/screenName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:text="\@Screen_Name"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/screenName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:textSize="17sp"
            android:text="Hi, my name is Jackie Legz and I'd like to say hello!"/>

        <TextView
            android:id="@+id/followingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="0"/>

        <TextView
            android:id="@+id/following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_toRightOf="@+id/followingCount"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:textSize="15sp"
            android:text="FOLLOWING"/>

        <TextView
            android:id="@+id/followersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_toRightOf="@+id/following"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="0"/>

        <TextView
            android:id="@+id/followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_toRightOf="@+id/followersCount"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:textSize="15sp"
            android:text="FOLLOWERS"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profileHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </FrameLayout>
</RelativeLayout>
